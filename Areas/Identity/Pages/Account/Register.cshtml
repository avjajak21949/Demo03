@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - School Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #1a73e8;
            --light-blue: #e8f0fe;
            --dark-blue: #0d47a1;
            --white: #ffffff;
            --gray-light: #f8f9fa;
        }

        body {
            background-color: var(--white);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background-image: linear-gradient(135deg, var(--light-blue) 0%, var(--white) 100%);
        }

        .register-container {
            max-width: 1000px;
            width: 100%;
            margin: auto;
            padding: 20px;
        }

        .register-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
        }

        .register-header {
            background-color: var(--primary-blue);
            color: var(--white);
            padding: 1.5rem;
            text-align: center;
            position: relative;
        }

        .register-header h1 {
            margin: 0;
            font-weight: 600;
            font-size: 1.8rem;
        }

        .home-btn {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--white);
            font-size: 1.2rem;
            transition: all 0.3s;
        }

        .home-btn:hover {
            color: var(--light-blue);
            transform: translateY(-50%) scale(1.1);
        }

        .form-section {
            padding: 2rem;
            background-color: var(--white);
        }

        .section-title {
            color: var(--primary-blue);
            font-weight: 500;
            margin-bottom: 1.5rem;
            text-align: center;
            font-size: 1.3rem;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 16px;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 0.25rem rgba(26, 115, 232, 0.25);
        }

        .btn-register {
            background-color: var(--primary-blue);
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            width: 100%;
        }

        .btn-register:hover {
            background-color: var(--dark-blue);
            transform: translateY(-2px);
        }

        .btn-external {
            border-radius: 8px;
            padding: 10px 15px;
            font-weight: 500;
            transition: all 0.3s;
            border: 1px solid var(--primary-blue);
            color: var(--primary-blue);
            margin: 0.3rem;
        }

        .btn-external:hover {
            background-color: var(--light-blue);
            color: var(--dark-blue);
            transform: translateY(-2px);
        }

        .form-check-input:checked {
            background-color: var(--primary-blue);
            border-color: var(--primary-blue);
        }

        .form-check-label {
            cursor: pointer;
        }

        .role-selection {
            background-color: var(--gray-light);
            padding: 1rem 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            border: 1px solid #ced4da;
        }

        .role-selection .form-check-label {
            font-size: 1.1rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            color: #6c757d;
            margin: 1.5rem 0;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }

        .divider::before {
            margin-right: 1rem;
        }

        .divider::after {
            margin-left: 1rem;
        }

        footer {
            background-color: var(--white);
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            padding: 1.5rem 0;
            margin-top: auto;
        }

        .footer a {
            color: var(--primary-blue);
            text-decoration: none;
            transition: color 0.3s;
        }

        .footer a:hover {
            color: var(--dark-blue);
            text-decoration: underline;
        }

        @@media (max-width: 768px) {
            .register-container {
                padding: 10px;
            }
            
            .home-btn {
                left: 10px;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="home-btn">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1><i class="fas fa-user-plus"></i> @ViewData["Title"]</h1>
            </div>

            <div class="row g-0">
                <div class="col-lg-6">
                    <div class="form-section">
                        <h4 class="section-title"><i class="fas fa-user-circle"></i> Create Account</h4>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="role-selection mb-4">
                                <label class="form-label fw-bold mb-2"><i class="fas fa-briefcase"></i> Select Your Role</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Input.Role" value="Employer" id="employerRadio" checked />
                                    <label class="form-check-label" for="employerRadio">
                                        <i class="fas fa-briefcase"></i> Employer
                                    </label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-register mb-3">
                                <i class="fas fa-user-plus"></i> Register
                            </button>
                        </form>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-section" style="border-left: 1px solid var(--gray-light);">
                        <h4 class="section-title"><i class="fas fa-users"></i> External Registration</h4>

                        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="alert alert-info text-center">
                                <p class="mb-0">
                                    <i class="fas fa-info-circle"></i> No external authentication services configured.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="d-flex flex-wrap justify-content-center">
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-external" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                            <i class="fab fa-@provider.DisplayName.ToLower()"></i> @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }

                        <div class="divider">OR</div>

                        <div class="text-center">
                            <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Sign in</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - School Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>