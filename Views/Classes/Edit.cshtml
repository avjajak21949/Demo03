@model Demo03.Models.Class

@{
    ViewData["Title"] = "Edit Class";
}

<h1>Edit Class</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClassID" />
            
            <div class="form-group mb-3">
                <label asp-for="CourseID" class="control-label">Course</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TeacherId" class="control-label">Teacher</label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId">
                    <option value="">-- Select Teacher --</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Class Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ScheduleInfo" class="control-label">Schedule Info</label>
                <input asp-for="ScheduleInfo" class="form-control" />
                <span asp-validation-for="ScheduleInfo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MaxCapacity" class="control-label">Maximum Class Capacity</label>
                <input asp-for="MaxCapacity" class="form-control" type="number" min="1" required />
                <small class="form-text text-muted">Enter the maximum number of students that can enroll in this class (minimum 1)</small>
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
